# Support des couleurs pour ls et grep
if command -v dircolors >/dev/null 2>&1; then
    eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
fi

# Alias personnalisés
alias ll='ls -la --group-directories-first'
alias la='ls -A'
alias l='ls -CF'
alias python='python3'

